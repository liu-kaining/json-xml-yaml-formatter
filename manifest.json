{
  "manifest_version": 3,
  "name": "Data Formatter Pro",
  "version": "2025.1.31",
  "author": "liqian_liukaining",
  "description": "JSON/XML/YAML格式化工具 - 最后更新：2025年1月31日",
  
  "icons": {
    "16": "/icons/icon16.png",
    "48": "/icons/icon48.png",
    "128": "/icons/icon128.png"
  },
  
  "action": {
    "default_icon": {
      "16": "/icons/icon16.png",
      "32": "/icons/icon32.png",
      "48": "/icons/icon48.png"
    },
    "default_popup": "popup.html",
    "default_title": "点击格式化剪贴板内容"
  },
  
  "permissions": ["clipboardWrite", "storage"]
}